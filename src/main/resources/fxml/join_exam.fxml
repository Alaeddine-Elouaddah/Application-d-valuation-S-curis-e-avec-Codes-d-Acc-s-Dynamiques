<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.JoinExamController"
            prefHeight="800.0" prefWidth="900.0"
            stylesheets="@../css/join_exam.css"
            styleClass="root-container">

    <!-- Conteneur principal centré -->
    <VBox alignment="CENTER" spacing="28.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Card blanche (formulaire) -->
        <VBox alignment="TOP_CENTER" spacing="20.0" 
              prefWidth="480.0" styleClass="form-card">
            <padding>
                <Insets top="48.0" bottom="48.0" left="40.0" right="40.0"/>
            </padding>

            <!-- Titre -->
            <Label text="Rejoindre un Examen" styleClass="form-title">
                <font><Font size="28.0"/></font>
            </Label>

            <!-- Sous-titre -->
            <Label text="Entrez le code d'examen fourni par votre professeur"
                   textAlignment="CENTER" wrapText="true"
                   styleClass="form-subtitle">
                <font><Font size="14.0"/></font>
            </Label>

            <!-- Séparateur visuel -->
            <Region prefHeight="12.0"/>

            <!-- Champs de saisie -->
            <VBox spacing="14.0">
                <!-- Code d'Examen -->
                <TextField fx:id="examCodeField"
                           promptText="Code d'Examen *"
                           styleClass="input-field">
                    <font><Font size="14.0"/></font>
                </TextField>

                <!-- Votre Nom -->
                <TextField fx:id="studentNameField"
                           promptText="Votre Nom *"
                           styleClass="input-field">
                    <font><Font size="14.0"/></font>
                </TextField>

                <!-- Numéro de Liste -->
                <TextField fx:id="listNumberField"
                           promptText="Numéro de Liste (optionnel)"
                           styleClass="input-field">
                    <font><Font size="14.0"/></font>
                </TextField>

                <!-- Filière -->
                <TextField fx:id="filiereField"
                           promptText="Filière *"
                           styleClass="input-field">
                    <font><Font size="14.0"/></font>
                </TextField>
            </VBox>

            <!-- Message d'erreur -->
            <Label fx:id="errorLabel" text=""
                   textAlignment="CENTER" wrapText="true"
                   styleClass="error-label">
                <font><Font size="12.0"/></font>
            </Label>

            <!-- Bouton Principal -->
            <Button fx:id="joinButton" text="Rejoindre l'Examen"
                    onAction="#handleJoinExam"
                    prefHeight="52.0" prefWidth="400.0"
                    styleClass="primary-button">
                <font><Font size="16.0"/></font>
                <VBox.margin>
                    <Insets top="8.0"/>
                </VBox.margin>
            </Button>

            <!-- Overlay Countdown (caché par défaut) -->
            <StackPane fx:id="countdownOverlay" 
                       prefHeight="300.0" prefWidth="400.0"
                       visible="false"
                       style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-background-radius: 10;">
                <Label fx:id="countdownLabel" text="5"
                       style="-fx-text-fill: white; -fx-font-size: 72px; -fx-font-weight: bold;"/>
            </StackPane>
        </VBox>

        <!-- Bouton Retour (en bas, discret) -->
        <Button fx:id="backButton" text="Retour"
                onAction="#handleBack"
                styleClass="back-button">
            <font><Font size="13.0"/></font>
        </Button>
    </VBox>
</AnchorPane>