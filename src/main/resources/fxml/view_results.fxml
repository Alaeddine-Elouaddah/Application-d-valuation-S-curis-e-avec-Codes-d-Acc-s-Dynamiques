    </TableView>
</VBox>
            </VBox>
            
            <!-- PAGINATION MODERNE -->
            <HBox spacing="0" alignment="CENTER" styleClass="pagination-section">
                <padding><Insets top="16.0" bottom="16.0" left="28.0" right="28.0" /></padding>
                
                <!-- Spacer gauche flexible -->
                <Region HBox.hgrow="ALWAYS" />
                
                <!-- Bouton Precedent -->
                <Button fx:id="prevButton" text="â—€" styleClass="btn-pagination-arrow" prefWidth="42.0" prefHeight="36.0" />
                
                <!-- Indicateur Page (au centre) -->
                <VBox alignment="CENTER" spacing="0" style="-fx-background-color: white; -fx-border-color: #DCD4FF; -fx-border-width: 1; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 8 16 8 16; -fx-margin: 0 16 0 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0, 0, 1);">
                    <HBox alignment="CENTER" spacing="4" style="-fx-alignment: center;">
                        <Label fx:id="currentPageLabel" text="1" style="-fx-font-weight: 700; -fx-font-size: 13; -fx-text-fill: #6C5CE7;" />
