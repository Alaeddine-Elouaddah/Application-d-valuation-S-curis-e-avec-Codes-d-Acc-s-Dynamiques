                <padding><Insets top="16.0" bottom="16.0" left="28.0" right="28.0" /></padding>
                
                <Label text="Filtrer par examen:" style="-fx-text-fill: #334155; -fx-font-weight: 600;" />
                <ComboBox fx:id="examFilterCombo" prefWidth="280.0" 
