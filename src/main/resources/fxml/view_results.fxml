                    <padding><Insets top="0.0" bottom="0.0" left="0.0" right="0.0" /></padding>
                    
                    <TextField fx:id="searchField" 
                               promptText="Rechercher un etudiant (Nom ou ID)"
                               styleClass="search-field"
                               prefWidth="360.0" />
                </HBox>
            </HBox>
            
            <!-- Separateur ligne -->
