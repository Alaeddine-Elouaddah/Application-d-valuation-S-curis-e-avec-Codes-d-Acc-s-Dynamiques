    <center>
        <VBox spacing="0.0" styleClass="content-wrapper">
            
            <!-- ========== TOP BAR ========== -->
            <HBox spacing="18.0" alignment="CENTER_LEFT" styleClass="topbar-section">
                <padding><Insets top="20.0" bottom="20.0" left="28.0" right="28.0" /></padding>
                
                <!-- Titre Principal -->
                <Label text="Resultats des Etudiants" styleClass="page-title">
