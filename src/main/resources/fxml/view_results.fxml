                <Button text="Actualiser" onAction="#handleRefresh" 
                        styleClass="btn-primary" />
                
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
            
            <!-- Separateur ligne -->
            <Region styleClass="kv-separator" style="-fx-min-height: 1.0;" />
            
            <!-- TABLEAU DES RESULTATS -->
            <VBox spacing="0.0" VBox.vgrow="ALWAYS" style="-fx-padding: 20 28 20 28;">
                
                <!-- En-tete du tableau -->
                <HBox spacing="12.0" alignment="CENTER_LEFT" style="-fx-padding: 0 0 12 0;">
                    <Label text="Liste des resultats" 
                           style="-fx-font-size: 16.0; -fx-font-weight: 700; -fx-text-fill: #0f172a;" />
                    <Region HBox.hgrow="ALWAYS" />
                </HBox>
                
<!-- Table wrapper (arrondie, moderne) -->
<VBox styleClass="table-wrapper" style="-fx-padding: 0; -fx-border-radius: 14; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
    <TableView fx:id="resultsTable" styleClass="results-table-modern" VBox.vgrow="ALWAYS">
