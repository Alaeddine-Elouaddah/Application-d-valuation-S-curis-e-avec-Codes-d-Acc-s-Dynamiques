    <Spinner fx:id="rowsPerPageSpinner" prefWidth="50.0" style="-fx-padding: 0;" />
    <Label text="par page" style="-fx-text-fill: #6B7280; -fx-font-size: 12.0; -fx-font-weight: 500;" />
