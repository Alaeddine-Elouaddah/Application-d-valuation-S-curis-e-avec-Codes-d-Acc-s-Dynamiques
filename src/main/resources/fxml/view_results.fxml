<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ViewResultsController"
            prefHeight="900.0" prefWidth="1600.0"
            stylesheets="@../css/view_results.css"
            styleClass="root-container">
    
    <!-- ================================
         SIDEBAR BLEU-VIOLET (GAUCHE)
         ================================ -->
    <left>
        <VBox styleClass="sidebar" spacing="0.0">
            
